version: "3.9"

services:
  backend:
    build: .
    container_name: cloud-incident-backend
    ports:
      - "3000:3000"
    environment:
      - AWS_REGION=us-east-1
      - DYNAMODB_TABLE=Incidents
      - DB_TYPE=DYNAMODB # or RDS
      - RDS_HOST=your-rds-endpoint
      - RDS_DB_NAME=incidentdb
      - RDS_USERNAME=admin
      - RDS_PASSWORD=password
    volumes:
      - .:/app
